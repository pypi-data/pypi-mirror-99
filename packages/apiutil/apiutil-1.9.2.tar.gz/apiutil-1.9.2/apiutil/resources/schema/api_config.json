{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for api config",

  "definitions": {

    "api": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "defaults": { "$ref": "#/definitions/api_parameters" },
            "inherits": {"type": "string"},
            "hidden": {"type": "boolean"}
          },
          "additionalProperties": false
        }
      ]
    },

    "api_parameters": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "family": {
              "oneOf": [
                {"type": "null"},
                {"type": "string"}
              ]
            },
            "host": {"type": "string"},
            "endpoints": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "array",
                  "items": {"type": "string"}
                }
              ]
            },
            "params": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }

  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/api" }
}