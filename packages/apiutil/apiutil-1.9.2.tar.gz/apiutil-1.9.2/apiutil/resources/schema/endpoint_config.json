{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for endpoint config",

  "definitions": {

    "endpoint": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "defaults": { "$ref": "#/definitions/endpoint_parameters" },
            "inherits": {"type": "string"},
            "hidden": {"type": "boolean"}
          },
          "additionalProperties": false
        }
      ]
    },

    "endpoint_parameters": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "path": {"type": "string"},
            "params": {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "object"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }

  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/endpoint" }
}