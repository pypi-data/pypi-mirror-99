{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for host config",

  "definitions": {

    "host": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "defaults": { "$ref": "#/definitions/host_parameters" },
            "inherits": {"type": "string"},
            "hidden": {"type": "boolean"}
          },
          "additionalProperties": false
        }
      ]
    },

    "host_parameters": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "protocol": {"type": "string"},
            "domain": {"type": "string"},
            "port": {"type": "number"},
            "secret_key": {"type": "string"},
            "user": {"type": "string"},
            "password": {"type": "string"}
          },
          "additionalProperties": false
        }
      ]
    }

  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/host" }
}