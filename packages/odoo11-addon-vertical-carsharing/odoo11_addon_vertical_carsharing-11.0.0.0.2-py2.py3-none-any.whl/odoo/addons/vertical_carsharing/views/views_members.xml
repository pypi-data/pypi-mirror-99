<odoo>
  <data>
    <record id="view_vc_members_form" model="ir.ui.view">
      <field name="name">sommobilitat.vc.members.form</field>
      <field name="model">res.partner</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group" position="after">
          <!--<group><field name="newsletter_subscription"/></group> -->
          <group>
            <field name="birthday" attrs="{'invisible': [('company_type','=', 'company')]}"/>
          </group>
          <group>
            <field name="representative" attrs="{'invisible': [('company_type','=', 'person')]}"/>
            <field name="representative_dni" attrs="{'invisible': [('company_type','=', 'person')]}"/>
            <field name="related_representative_member_id" attrs="{'invisible': [('company_type','=', 'person')]}"/>
          </group>
          <group>
            <field name="image_dni" attrs="{'invisible': [('company_type','=', 'company')]}"/>
            <field name="image_driving_license" attrs="{'invisible': [('company_type','=', 'company')]}"/>
            <field name="driving_license_expiration_date" attrs="{'invisible': [('company_type','=', 'company')]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
