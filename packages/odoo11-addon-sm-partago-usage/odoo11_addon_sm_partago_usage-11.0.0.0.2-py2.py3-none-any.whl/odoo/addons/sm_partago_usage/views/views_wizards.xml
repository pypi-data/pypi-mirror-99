<odoo>
  <data>

    <record id="view_reservation_compute_wizard" model="ir.ui.view">
      <field name="name">smp.reservation_compute_wizard.form</field>
      <field name="model">smp.sm_reservation_wizard</field>
      <field name="arch" type="xml">
        <form string="Are you sure?">
          <footer>
            <button name="create_request"
              string="Yes" type="object"
              class="btn-primary"/>
            <button string="No"
              class="btn-default"
              special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="view_reservation_incoming_wizard" model="ir.ui.view">
      <field name="name">smp.reservation_compute_wizard.form</field>
      <field name="model">smp.sm_reservation_wizard</field>
      <field name="arch" type="xml">
        <form string="Are you sure?">
          <footer>
            <button name="create_request_incoming"
              string="Yes" type="object"
              class="btn-primary"/>
            <button string="No"
              class="btn-default"
              special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_reservation_compute_wizard" model="ir.actions.act_window">
      <field name="name">Are you sure?</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">smp.sm_reservation_wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_reservation_compute_wizard"/>
      <field name="target">new</field>
    </record>

    <menuitem name="DB: Fetch reservations" id="sm_partago_usage.reservation_compute_wizard" parent="sm_partago_usage.menu_root"
      action="action_view_reservation_compute_wizard" sequence="11"/>

  </data>
</odoo>
