<odoo>
  <data>

    <record id="view_collaborator_window" model="ir.actions.act_window">
      <field name="name">Collaborators</field>
      <field name="res_model">sm_collaborators.sm_collaborator</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_collaborator_search" model="ir.ui.view">
      <field name="name">sm_collaborators.collaborator.search</field>
      <field name="model">sm_collaborators.sm_collaborator</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="DB collaborators search">
          <field name="member_name"/>
          <field name="member_email"/>
          <field name="related_member_id"/>
        </search>
      </field>
    </record>

    <record id="view_collaborator_list" model="ir.ui.view">
      <field name="name">sm_collaborators.collaborator.tree</field>
      <field name="model">sm_collaborators.sm_collaborator</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date"/>
          <field name="collaborator_type"/>
          <field name="member_email"/>
          <field name="related_member_id"/>
          <field name="completed"/>
          <field name="end"/>
        </tree>
      </field>
    </record>

    <record id="view_collaborator_form" model="ir.ui.view">
      <field name="name">sm_collaborators.collaborator.form</field>
      <field name="model">sm_collaborators.sm_collaborator</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Edit group" version="7.0" delete="false">
          <sheet>
            <notebook>
              <page string="Data">
                <group>
                  <field name="id" invisible="True"/>
                  <field name="name" attrs="{'readonly':[('id','!=',False)]}"/>
                  <field name="date"/>
                  <field name="collaborator_type"/>
                  <field name="collaborator_info"/>
                  <field name="member_name"/>
                  <field name="member_email"/>
                </group>
              </page>
              <page string="Computed">
                <group>
                  <field name="completed"/>
                  <field name="end"/>
                  <field name="related_member_id"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Collaborators" id="sm_collaborators.collaborator" parent="sm_collaborators.menu_root"
          action="view_collaborator_window"/>

  </data>
</odoo>
