 <transition transition_id="backToAdviceInitialState"
             title="backToAdviceInitialState"
             new_state="proposed_to_financial_controller"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" icon="" category="workflow" i18n:translate="">backToAdviceInitialState</action>
  <guard>
    <guard-expression>python:here.wfConditions().mayBackToAdviceInitialState()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="backToProposedToFinancialController"
             title="backToProposedToFinancialController"
             new_state="proposed_to_financial_controller"
             trigger="USER"
             before_script=""
             after_script=""
             i18n:attributes="title">
  <action url="" icon="" category="workflow" i18n:translate="">backToProposedToFinancialController</action>
  <guard>
    <guard-expression>python:here.wfConditions().mayCorrect()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="backToProposedToFinancialEditor"
             title="backToProposedToFinancialEditor"
             new_state="proposed_to_financial_editor"
             trigger="USER"
