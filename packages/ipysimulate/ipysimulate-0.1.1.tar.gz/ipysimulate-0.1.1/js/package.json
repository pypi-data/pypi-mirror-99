{
  "name": "ipysimulate",
  "version": "0.1.1",
  "description": "Interactive interface to control and visualize agent-based simulations in Jupyter Notebooks.",
  "author": "JoÃ«l Foramitti",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JoelForamitti/ipysimulate.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf dist/ && rimraf ../ipysimulate/labextension/ && rimraf ../ipysimulate/nbextension",
    "prepublish": "yarn run clean && yarn run build:prod",
    "build": "webpack --mode=development && yarn run build:labextension:dev",
    "build:prod": "webpack --mode=production && yarn run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "watch": "webpack --watch --mode=development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0",
    "css-loader": "^0.28.7",
    "style-loader": "^0.18.2",
    "rimraf": "^2.6.1",
    "webpack": "^5",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4",
    "d3": "^6.6.0",
    "lodash": "^4.17.21"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../ipysimulate/labextension",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
