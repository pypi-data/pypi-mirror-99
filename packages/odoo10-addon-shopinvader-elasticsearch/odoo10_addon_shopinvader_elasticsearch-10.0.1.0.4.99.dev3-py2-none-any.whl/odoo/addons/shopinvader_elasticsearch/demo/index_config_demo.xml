<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="index_config_1" model="se.index.config">
        <field name="name">variant_config</field>
        <field name="body">{}</field>
        <field name="body_str">
            {
              "settings": {
                "index": {
                  "sort.order": ["desc", "asc"],
                  "sort.field": ["main", "id"]
                }
              },
              "mappings": {
                "properties": {
                  "hierarchicalCategories": {
                    "properties": {
                      "ancestors": {
                        "type": "keyword"
                      },
                      "order": {
                        "type": "integer"
                      },
                      "value": {
                        "type": "keyword"
                      },
                      "level": {
                        "type": "integer"
                      }
                    }
                  },
                  "url_key": {
                    "type": "keyword"
                  },
                  "variant_attributes": {
                    "properties": {
                      "color": {
                        "type": "text",
                        "fielddata": true
                      }
                    }
                  },
                  "main": {
                    "type": "boolean"
                  },
                  "id": {
                    "type": "integer"
                  },
                  "redirect_url_key": {
                    "type": "keyword"
                  }
                }
              }
            }
        </field>
    </record>

    <record id="index_config_2" model="se.index.config">
        <field name="name">category_config</field>
        <field name="body">{}</field>
        <field name="body_str">
            {
              "settings" : {
                "index" : {
                  "sort.field" : ["id"],
                  "sort.order" : ["asc"]
                }
              },
              "mappings": {
                "properties": {
                  "url_key": {
                    "type":  "keyword"
                  },
                  "redirect_url_key": {
                    "type":  "keyword"
                  },
                  "id": {
                    "type":  "integer"
                  }
                }
              }
            }
        </field>
    </record>
</odoo>
