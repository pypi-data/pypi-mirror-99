{
    "connection": {
        "type": {
            "displayName": "IBM\u00ae Cloud Security Advisor",
            "type": "connectorType"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "help": {
            "type": "link",
            "default": "https://www.ibm.com/support/knowledgecenter/SSTDPP_1.1.0/docs/scp-core/data-sources-security-advisor.html"
        },
        "options": {
            "type": "fields",
            "result_limit": {
                "default": 10000,
                "min": 1,
                "max": 60000,
                "type": "number",
                "previous": "connection.resultSizeLimit"
            },
            "time_range": {
                "default": 5,
                "min": 1,
                "max": 10000,
                "type": "number",
                "previous": "connection.timerange",
                "nullable": true
            },
            "timeout": {
                "default": 10,
                "min": 1,
                "max": 60,
                "hidden": true,
                "type": "number",
                "previous": "connection.timeoutLimit"
            },
            "dialects": {
                "type": "array",
                "hidden": true,
                "optional": true
            },
            "language": {
                "type": "string",
                "default": "stix",
                "optional": true,
                "hidden": true
            },
            "validate_pattern": {
                "type": "boolean",
                "optional": true,
                "hidden": true,
                "previous": "connection.validate_pattern"
            },
            "stix_validator": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true,
                "previous": "connection.stix_validator"
            },
            "mapping": {
                "type": "json",
                "optional": true,
                "hidden": true,
                "previous": "connection.mapping",
                "default": {
                    "to_stix_map": {
                        "author_id": {
                            "key": "user-account.user_id"
                        },
                        "author_accountId": {
                            "key": "x_security_advisor_finding.author_accountId",
                            "cybox": false
                        },
                        "ipv4address": {
                            "key": "ipv4-addr.value"
                        },
                        "ipv6address": {
                            "key": "ipv6-addr.value"
                        },
                        "email": {
                            "key": "email-addr.value"
                        },
                        "domain-name": {
                            "key": "domain-name.value"
                        },
                        "mac-addr": {
                            "key": "mac-addr.value"
                        },
                        "url": {
                            "key": "url.value"
                        },
                        "file": {
                            "key": "file.value"
                        },
                        "directory": {
                            "key": "directory.value"
                        },
                        "context_resourceName": {
                            "key": "x_security_advisor_finding.context_resourceName",
                            "cybox": false
                        },
                        "description": {
                            "key": "x_security_advisor_finding.description",
                            "cybox": false
                        },
                        "finding_severity": {
                            "key": "x_security_advisor_finding.finding_severity",
                            "cybox": false
                        },
                        "finding_certainty": {
                            "key": "x_security_advisor_finding.finding_certainty",
                            "cybox": false
                        },
                        "id": {
                            "key": "x_security_advisor_finding.id",
                            "cybox": false
                        },
                        "longDescription": {
                            "key": "x_security_advisor_finding.longDescription",
                            "cybox": false
                        },
                        "message": {
                            "key": "x_security_advisor_finding.message",
                            "cybox": false
                        },
                        "name": {
                            "key": "x_security_advisor_finding.name",
                            "cybox": false
                        },
                        "noteName": {
                            "key": "x_security_advisor_finding.noteName",
                            "cybox": false
                        },
                        "providerId": {
                            "key": "x_security_advisor_finding.providerId",
                            "cybox": false
                        },
                        "providerName": {
                            "key": "x_security_advisor_finding.providerName",
                            "cybox": false
                        },
                        "remediation": {
                            "key": "x_security_advisor_finding.remediation",
                            "cybox": false
                        },
                        "reportedBy_id": {
                            "key": "x_security_advisor_finding.reportedBy_id",
                            "cybox": false
                        },
                        "reportedBy_title": {
                            "key": "x_security_advisor_finding.reportedBy_title",
                            "cybox": false
                        },
                        "shortDescription": {
                            "key": "x_security_advisor_finding.shortDescription",
                            "cybox": false
                        },
                        "finding_next_steps_0_title": {
                            "key": "x_security_advisor_finding.finding_next_steps_0_title",
                            "cybox": false
                        },
                        "context_accountId": {
                            "key": "x_security_advisor_finding.context_accountId",
                            "cybox": false
                        },
                        "createTime": {
                            "key": "first_observed",
                            "cybox": false
                        },
                        "updateTime": {
                            "key": "last_observed",
                            "cybox": false
                        },
                        "occurence_count": {
                            "key": "number_observed",
                            "cybox": false,
                            "transformer": "ToInteger"
                        }
                    }
                }
            },
            "unmapped_fallback": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true
            }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "accountID": {
                "type": "password"
            },
            "apiKey": {
                "type": "password"
            }
        }
    }
}