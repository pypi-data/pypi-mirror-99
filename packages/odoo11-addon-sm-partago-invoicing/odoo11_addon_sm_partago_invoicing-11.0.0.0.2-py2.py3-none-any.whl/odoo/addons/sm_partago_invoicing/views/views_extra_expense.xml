<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_extra_expense_in_invoice_report_form" model="ir.ui.view">
      <field name="name">sm_partago_invoicing.smp_extra_expense.form.inherit</field>
      <field name="model">smp.extra_expense</field>
      <field name="inherit_id" ref="sm_extra_expenses.view_extra_expense_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page/group" position="inside">
          <field name="invoice_report_id"/>
        </xpath>
      </field>
    </record>
    <record id="view_extra_expense_in_invoice_report_list" model="ir.ui.view">
      <field name="name">sm_partago_invoicing.smp_extra_expense.list.inherit</field>
      <field name="model">smp.extra_expense</field>
      <field name="inherit_id" ref="sm_extra_expenses.view_extra_expense_list"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="inside">
          <field name="invoice_report_id"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
