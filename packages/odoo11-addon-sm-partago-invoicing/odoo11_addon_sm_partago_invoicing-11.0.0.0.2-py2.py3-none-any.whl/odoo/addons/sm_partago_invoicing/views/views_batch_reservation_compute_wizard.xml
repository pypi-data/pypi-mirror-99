<odoo>
  <record model="ir.ui.view" id="view_batch_reservation_compute_wizard">
    <field name="name">Create batch reservation</field>
    <field name="model">sm_partago_invoicing.sm_batch_reservation_compute.wizard</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="description"/>
        </group>
        <group col="4">
          <field name="compute_reservations"/>
          <field name="compute_teletacs"/>
        </group>
        <group attrs="{'invisible': [('compute_reservations','=', False)]}">
          <field name="reservations" widget="many2many_list">
            <tree create="true" edit="true" delete="true" open="true">
              <field name="name"/>
              <field name="carconfig_id"/>
              <field name="member_id"/>
            </tree>
          </field>
        </group>
        <group attrs="{'invisible': [('compute_teletacs','=', False)]}">
          <field name="teletacs" widget="many2many_list">
            <tree create="true" edit="true" delete="true" open="true">
              <field name="name"/>
              <field name="reservation_compute_id"/>
            </tree>
          </field>
        </group>
        <footer>
          <button name="create_batch"
            string="Create batch" type="object"
            class="btn-primary"/>
          <button string="Cancel"
            class="btn-default"
            special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>