<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- CARSHARING REGISTRATION -->
    <record id="view_invoice_report_wizard" model="ir.ui.view">
      <field name="name">sm_partago_invoicing.invoice_report_wizard.form</field>
      <field name="model">sm_partago_invoicing.sm_invoice_report_wizard</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Are you sure?">
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="is_grouped"/>
                </group>
                <group>
                  <field name="timeframe_desc"/>
                </group>
                <group attrs="{'invisible': [('is_grouped','=', False)]}">
                  <field name="member_id"/>
                </group>
              </page>
            </notebook>
          </sheet>
          <footer>
            <button name="create_invoice_report"
                string="Yes" type="object"
                class="btn-primary"/>
            <button string="No"
                class="btn-default"
                special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  </data>
</odoo>
