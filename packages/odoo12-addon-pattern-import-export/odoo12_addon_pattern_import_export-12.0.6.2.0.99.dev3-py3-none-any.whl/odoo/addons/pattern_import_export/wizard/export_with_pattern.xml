<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_export_with_pattern_wizard" model="ir.ui.view">
        <field name="name">Export With Pattern</field>
        <field name="model">export.pattern.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="model" invisible="1" />
                    <field name="no_export_pattern" invisible="1" />
                    <field
                        name="pattern_config_id"
                        domain="[('resource', '=', model)]"
                        options="{'no_create': True, 'no_edit': True}"
                    />
                    <span
                        attrs="{'invisible': [('no_export_pattern', '=', False)]}"
                        colspan="2"
                    >
                        There is no export pattern for this object !<br />
                        Please go to the menu .... and create one.
                    </span>
                </group>
                <footer>
                    <button
                        name="run"
                        string="Export"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('no_export_pattern', '=', True)]}"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_export_with_pattern" model="ir.actions.act_window">
        <field name="name">Export With Pattern</field>
        <field name="res_model">export.pattern.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">list</field>
        <field name="view_id" ref="view_export_with_pattern_wizard" />
        <field name="target">new</field>
    </record>

</odoo>
