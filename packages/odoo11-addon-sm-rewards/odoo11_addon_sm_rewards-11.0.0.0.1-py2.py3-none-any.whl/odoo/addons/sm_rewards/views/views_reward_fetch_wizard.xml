<odoo>
  <data>

    <record id="view_fetch_rewards_wizard" model="ir.ui.view">
      <field name="name">smp.fetch_rewards_wizard.form</field>
      <field name="model">sm_rewards.sm_reward_fetch_wizard</field>
      <field name="arch" type="xml">
        <form string="Are you sure?">
          <footer>
            <button name="create_request"
              string="Yes" type="object"
              class="btn-primary"/>
            <button string="No"
              class="btn-default"
              special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_view_fetch_rewards_wizard" model="ir.actions.act_window">
      <field name="name">Are you sure?</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sm_rewards.sm_reward_fetch_wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_fetch_rewards_wizard"/>
      <field name="target">new</field>
    </record>

    <menuitem name="DB: Fetch www rewards" id="sm_rewards.reward_fetch_wizard" parent="sm_rewards.menu_root"
      action="action_view_fetch_rewards_wizard" sequence="11"/>

  </data>
</odoo>