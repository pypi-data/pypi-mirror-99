<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="cs_rewards_res_config_settings_view_form" model="ir.ui.view">
    <field name="name">cs_rewards.res.config.settings.view.form.inherit.base.setup</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="100"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="CS Rewards" string="CS Rewards" data-key="cs_rewards">
          <div class="sm_mail_templates">
            <h2>Mail Templates</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="cs_reward_completed_email_template_id"/>
                <field name="cs_reward_soci_not_found_email_template_id"/>
              </group>
            </div>
          </div>
          <div class="sm_reward_accounting">
            <h2>Accounting</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="reward_account_id"/>
                <field name="reward_analytic_account_id"/>
              </group>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>