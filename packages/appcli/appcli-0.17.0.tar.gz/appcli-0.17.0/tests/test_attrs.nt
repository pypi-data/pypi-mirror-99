test_config_attr:
  -
    id: keys
    obj:
      > class DummyConfig(appcli.Config):
      >     def get_x(self, obj):
      >         return 1
      >
      > class DummyObj:
      >     __config__ = [DummyConfig()]
      >     x = appcli.config_attr()
      >     y = appcli.config_attr('x')
    expected:
      x: 1
      y: 1

  -
    id: iterate
    obj:
      > class DummyConfig(appcli.Config):
      >     def __init__(self, x):
      >         self.x = x
      >     def get_x(self, obj):
      >         return self.x
      >
      > class DummyObj:
      >     __config__ = [
      >             DummyConfig(1),
      >             DummyConfig(2),
      >     ]
      >     x = appcli.config_attr()
    expected:
      x: 1
