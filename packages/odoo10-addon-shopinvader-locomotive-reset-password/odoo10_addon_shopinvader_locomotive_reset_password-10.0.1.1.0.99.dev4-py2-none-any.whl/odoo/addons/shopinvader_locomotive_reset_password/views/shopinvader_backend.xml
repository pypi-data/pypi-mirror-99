<odoo>

    <record model="ir.ui.view" id="shopinvader_backend_form_view">
        <field name="name">shopinvader.backend.form (in shopinvader_locomotive_reset_password)</field>
        <field name="model">shopinvader.backend</field>
        <field name="inherit_id" ref="shopinvader_locomotive.shopinvader_backend_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='config']/group[@name='config']" position="after">
                <group name="password" colspan="4" col="4">
                    <field name="password_validity"/>
                    <field name="password_reset_template_id" attrs="{'required': [('password_validity', '>', 0)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
