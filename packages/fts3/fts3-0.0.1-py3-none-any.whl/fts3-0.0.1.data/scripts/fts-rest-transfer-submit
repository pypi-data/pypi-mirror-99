#!python
import logging
import sys
import traceback

from fts3.cli import JobSubmitter

if __name__ == "__main__":
    try:
        submitter = JobSubmitter()
        submitter(sys.argv[1:])
    except Exception as e:
        logging.critical(str(e))
        if logging.getLogger().getEffectiveLevel() == logging.DEBUG:
            traceback.print_exc()
        sys.exit(1)
