#!/usr/bin/env python3 
# This file is placed in the Public Domain.

__version__ = 31

import time

from botl import cfg, format, j
from botl.csl import Shell, exec, sys
from botl.dbs import last
from botl.utl import privileges

from botd.tbl import tbl

def cprint(txt):
    sys.stdout.write(txt + "\n")
    sys.stdout.flush()

def ver(event):
    event.reply("BOTD %s" % __version__)

def main():
    privileges("botd")
    cprint("BOTD %s started at %s" % (__version__, time.ctime(time.time())))
    last(cfg)
    cprint(format(cfg))
    s = Shell()
    s.settbl(tbl)
    s.add("ver", ver)
    scandir(s, j(cfg.wd, "mod"))
    s.start()
    s.init("irc,rss")
    s.init(cfg.mods)
    cprint("loaded %s" % ",".join(s.modnames))
    s.wait()

exec(main)
