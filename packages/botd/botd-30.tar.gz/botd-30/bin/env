#!/usr/bin/python3
# This file is placed in the Public Domain.

import os

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("bin/clean")
    try:
        shutil.rmtree("build")
    except:
        pass
    try:
        shutil.rmtree("dist")
    except:
        pass
    try:
        shutil.rmtree("%s.egg-info" % botd)
    except:
        pass
    for line in os.popen("python3 setup.py sdist").readlines():
        print(line.strip())
    open("python3 -mvirtualenv -p python3 env")
    open("env/bin/pip3 install botd -f dist --upgrade --force-reinstall")

if __name__ == "__main__":
    main()
    open("tar zcf env.tar.gz env")
