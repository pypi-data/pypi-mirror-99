    <portlet name="BCT - Instrength and Outstrength- Topo" identifier="ISOSTOPO">
        <inputs>
            <input>
                <name value="chain_1"/>
                <label value="First adapter from chain"/>
                <type value="tvb.adapters.analyzers.bct_degree_adapters.StrengthISOS"/>
