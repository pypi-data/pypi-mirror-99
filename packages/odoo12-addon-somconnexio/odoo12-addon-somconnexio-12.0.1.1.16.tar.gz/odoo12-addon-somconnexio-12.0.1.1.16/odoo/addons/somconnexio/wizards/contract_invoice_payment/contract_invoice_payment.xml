<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_contract_invoice_payment_wizard" model="ir.ui.view">
      <field name="name">Contract Invoice Payment Wizard</field>
      <field name="model">contract.invoice.payment.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="state" invisible="1" />
            <field name="data" string="CSV file" states="load"/>
            <field name="errors" string="Errors" states="errors" readonly="1"/>
          </group>
          <footer>
            <button type="object" name="run_wizard" string="Import" states="load"/>
            <button special="cancel" string="Accept" class="btn-secondary" states="errors"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_contract_payment_wizard"
            name="Contract Invoice Payment Wizard"
            res_model="contract.invoice.payment.wizard"
            view_type="form"
            view_mode="form"
            target="new"
    />
  <menuitem id="contract_invoice_payement_menu"
      parent="account.menu_finance_receivables"
      action="action_contract_payment_wizard" sequence="15"/>
  </data>
</odoo>
