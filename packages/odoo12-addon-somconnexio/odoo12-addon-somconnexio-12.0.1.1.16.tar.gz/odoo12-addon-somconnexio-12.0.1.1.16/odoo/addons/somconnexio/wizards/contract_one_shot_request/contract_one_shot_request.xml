<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_contract_one_shot_request_wizard" model="ir.ui.view">
      <field name="name">Contract One Shot Request Wizard</field>
      <field name="model">contract.one.shot.request.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="contract_id" invisible="1"/>
            <field name="product_category_id" invisible="1"/>
            <field name="one_shot_product_id"
                   domain="[('product_tmpl_id.categ_id.id', '=', product_category_id)]"/>
            <field name="start_date"/>
          </group>
          <footer>
            <button type="object" name="button_add" string="Add" />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_contract_one_shot_request_wizard"
                name="Request One Shot Product"
                res_model="contract.one.shot.request.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                />
    <record id="view_contract_form_one_shot_wizard_button" model="ir.ui.view">
      <field name="name">contract.form.one.shot.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_contract_send" position="after">
        <button name="%(action_contract_one_shot_request_wizard)d"
                string="Request One Shot Product"
                type="action"
                context="{'default_active_id': active_id}"
                />
        </button>
      </field>
    </record>
  </data>
</odoo>