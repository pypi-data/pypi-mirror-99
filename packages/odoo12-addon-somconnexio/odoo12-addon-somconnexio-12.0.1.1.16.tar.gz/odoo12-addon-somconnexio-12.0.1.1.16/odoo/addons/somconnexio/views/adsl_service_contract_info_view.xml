<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="adsl_service_contract_info_form_view" model="ir.ui.view">
    <field name="name">adsl.service.contract.info.form</field>
    <field name="model">adsl.service.contract.info</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="phone_number" />
            <field name="administrative_number" />
          </group>
          <group>
            <field name="router_product_id"
                   domain="[('categ_id', '=', %(router_category)d)]"
                   options="{'no_create': True}"
            />
            <field name="router_lot_id"
                   attrs="{'readonly': [('router_product_id', '=', False)]}"
                   context="{'default_product_id': router_product_id}"
                   domain="[('product_id', '=', router_product_id)]"
                   options="{'no_open': True}"
            />
          </group>
        </group>
        <group>
          <group>
            <field name="ppp_user" />
            <field name="ppp_password" />
          </group>
          <group>
            <field name="endpoint_user" />
            <field name="endpoint_password" />
          </group>
        </group>
      </form>
    </field>
  </record>
</odoo>