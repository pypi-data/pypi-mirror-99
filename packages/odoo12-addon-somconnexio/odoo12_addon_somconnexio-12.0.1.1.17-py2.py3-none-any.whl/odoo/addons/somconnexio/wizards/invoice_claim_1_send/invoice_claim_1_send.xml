<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_invoice_claim_1_send_wizard" model="ir.ui.view">
      <field name="name">Invoice Claim 1 Send Wizard</field>
      <field name="model">invoice.claim.1.send.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <p>Send Claim 1 Email?</p>
          </sheet>
          <footer>
            <button type="object" name="button_send" string="Send" />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_invoice_claim_1_send_wizard"
                name="Send Claim 1 Email"
                src_model="mail.activity"
                res_model="invoice.claim.1.send.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                multi="True"
                />
  </data>
</odoo>