<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_contract_email_change_wizard" model="ir.ui.view">
      <field name="name">Contract Email Change Wizard</field>
      <field name="model">contract.email.change.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="partner_id" invisible="1" />
            <field name="available_email_ids" invisible="1" />
            <field name="contract_ids" domain="[('partner_id', '=', partner_id)]"/>
            <field name="email_ids" widget="many2many_tags_contract_email"
                   options="{'no_create_edit':True}"
                   context="{'email_tags': True}"
                   domain="[('id', 'in', available_email_ids)]"
            />
          </group>
          <footer>
            <button type="object" name="button_change" string="Change" />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_contract_email_change_wizard"
                name="Change Contract Email"
                res_model="contract.email.change.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                />
    <record id="view_partner_form_email_wizard_button" model="ir.ui.view">
      <field name="name">res.partner.form.email.wizard.button</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="view_partner_form_iban_wizard_button"/>
      <field name="arch" type="xml">
        <button id="action_view_update_partner_info" position="after">
          <button name="%(action_contract_email_change_wizard)d"
                  string="Change Contracts Email"
                  type="action"
                  context="{'default_active_id': active_id}"
          />
        </button>
      </field>
    </record>
  </data>
</odoo>