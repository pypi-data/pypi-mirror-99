<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="account_move_line_view_search" model="ir.ui.view">
    <field name="name">account.move.line.view.search</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account_due_list.view_payments_filter"/>
    <field name="arch" type="xml">
      <filter name="overdue" position="after">
        <filter
          string="Overdue including today"
          name="overdue_including_today"
          domain="[('date_maturity','&lt;=',time.strftime('%Y-%m-%d'))]"/>
      </filter>
    </field>
  </record>
</odoo>
