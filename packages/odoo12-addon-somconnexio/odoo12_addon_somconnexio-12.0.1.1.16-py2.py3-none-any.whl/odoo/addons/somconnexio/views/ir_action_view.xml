<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_server_action_form_template">
      <field name="name">ir.actions.server.form</field>
      <field name="model">ir.actions.server</field>
      <field name="inherit_id" ref="base.view_server_action_form"/>
      <field name="arch" type="xml">
        <field name="template_id" position="attributes">
          <attribute name="attrs">
            {
              'invisible': [
                ('state', 'not in', ['email', 'background_email'])
              ],
              'required': [
                ('state', 'in', ['email', 'background_email'])
              ]
            }
          </attribute>
        </field>
      </field>
    </record>
  </data>
</odoo>
