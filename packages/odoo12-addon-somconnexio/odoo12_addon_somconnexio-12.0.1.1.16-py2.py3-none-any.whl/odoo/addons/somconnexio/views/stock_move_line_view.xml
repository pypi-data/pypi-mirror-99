<odoo>
  <record id="stock_move_line_view_operations_tree" model="ir.ui.view">
    <field name="name">stock.move.line.operations.tree</field>
    <field name="model">stock.move.line</field>
    <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
    <field name="arch" type="xml">
      <field name="lot_name" position="after">
        <field name="lot_router_mac" attrs="{'readonly': ['&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True)]}" invisible="not context.get('show_lots_text')" groups="stock.group_production_lot"/>
      </field>
    </field>
  </record>
</odoo>